  <content>{{velocity}}&#xd;
#if ($request.Import)&#xd;
  ## Set input and output types for filter&#xd;
  #set($input = 'githubimporter+wiki')&#xd;
  #set($output = 'xwiki+instance')&#xd;
  &#xd;
  ## Set input properties by going through each request parameter value&#xd;
  #set($inputProperties = {})&#xd;
  #foreach($parameterName in $request.parameterNames)&#xd;
    #if ($parameterName.startsWith('githubimporter_properties_descriptor_'))&#xd;
      #set($propertyName = $parameterName.substring(37))&#xd;
      #set($paramValue = $request.get($parameterName))&#xd;
      #if ($propertyName.startsWith('source'))&#xd;
        #if ($paramValue.startsWith('http'))&#xd;
          #set($paramValue = "url:${paramValue}")&#xd;
        #else&#xd;
          #set($propertyName = 'source')&#xd;
          #set($paramValue = "file:${paramValue}")&#xd;
        #end&#xd;
      #end&#xd;
      #if ($request.getParameter($parameterName) &amp;&amp; $request.getParameter($parameterName) != '')&#xd;
        #set($void = $inputProperties.put($propertyName, $paramValue))&#xd;
      #end&#xd;
    #end&#xd;
  #end&#xd;
&#xd;
  ## Set default options for XWiki output instance otherwise outputProperties will be null&#xd;
  #set($outputProperties = {})&#xd;
  #set($void = $outputProperties.put('verbose', 'true'))&#xd;
  #set($void = $outputProperties.put('author', ''))&#xd;
  #set($void = $outputProperties.put('groupPrefix', ''))&#xd;
  #set($void = $outputProperties.put('groupSuffix', ''))&#xd;
  #set($void = $outputProperties.put('saveComment', 'Import'))&#xd;
  #set($void = $outputProperties.put('versionPreserved', 'true'))&#xd;
  #set($void = $outputProperties.put('authorPreserved', 'true'))&#xd;
  #set($void = $outputProperties.put('defaultReference', ''))&#xd;
  #set($void = $outputProperties.put('defaultSyntax', ''))&#xd;
  #set($void = $outputProperties.put('previousDeleted', 'true'))&#xd;
  #set($void = $outputProperties.put('stoppedWhenSaveFail', 'true'))&#xd;
  &#xd;
  ## Set job in filter and start the conversion&#xd;
  #set($job = $services.filter.startConvert($input, $inputProperties, $output, $outputProperties))&#xd;
  #if ($job and $request.method == 'POST')&#xd;
    {{info}}A job for the import has started.{{/info}}&#xd;
  #end&#xd;
#end&#xd;
{{/velocity}}&#xd;
&#xd;
{{template name="job_macros.vm"/}}&#xd;
&#xd;
{{velocity output="false"}}&#xd;
#set ($discard = $xwiki.jsfx.use('uicomponents/job/job.js', true))&#xd;
{{/velocity}}&#xd;
&#xd;
{{velocity}}&#xd;
## Display job log of conversion&#xd;
#if ($request.method == 'POST')&#xd;
== Import Information ==&#xd;
{{html}}&#xd;
  &lt;div id="filter_job_status">&#xd;
    #set($job = $services.filter.currentJob)&#xd;
    #if ($job)&#xd;
      #set ($jobStatusURL = $xwiki.getURL('GitHub Importer.Code.FilterStreamJobJSON', 'get', $escapetool.url({&#xd;
        'outputSyntax': 'plain'&#xd;
      })))&#xd;
      &lt;div class="xcontent job-status" data-url="$jobStatusURL">&#xd;
        #set($jobStatus = $job.status)&#xd;
        #set($finished = $jobStatus.state.name() == 'FINISHED')&#xd;
        #if (!$finished)&#xd;
          #displayJobProgressBar($jobStatus)&#xd;
        #else&#xd;
          #if (!$jobStatus.logTail.hasLogLevel('ERROR'))&#xd;
            &lt;div class="box successmessage">&#xd;
              Import completed.&#xd;
            &lt;/div>&#xd;
          #else&#xd;
            &lt;div class="box errormessage">&#xd;
              An error has occured during the import. Check the Job log for more information.&#xd;
            &lt;/div>&#xd;
          #end&#xd;
        #end&#xd;
        #displayJobStatusLog($jobStatus true)&#xd;
      &lt;/div>&#xd;
    #end&#xd;
  &lt;/div>&#xd;
{{/html}}&#xd;
#end&#xd;
{{/velocity}}&#xd;
&#xd;
{{html clean="false"}}&#xd;
&lt;form class="xform" method="post">&#xd;
  &lt;fieldset>&#xd;
    &lt;dl>&#xd;
      &lt;dt>&#xd;
        &lt;label for="githubimporter_input_source_type">Source Type&lt;/label>&#xd;
        &lt;span class="xHint">This can be a URL or File. (File source is not supported yet.)&lt;/span>&#xd;
      &lt;/dt>&#xd;
      &lt;dd>&#xd;
        &lt;select name="input" id="githubimporter_sourcetype">&#xd;
          &lt;option value="url" selected="selected"&gt;URL&lt;/option>&#xd;
          &lt;option value="file">FILE / DIRECTORY&lt;/option>&#xd;
        &lt;/select>&#xd;
      &lt;/dd>&#xd;
      &lt;dt class="githubimporter_properties_descriptor_source">&#xd;
        &lt;label for="githubimporter_properties_descriptor_source">&#xd;
          URL&#xd;
          &lt;span class="xRequired">(Required)&lt;/span>&#xd;
        &lt;/label>&#xd;
        &lt;span class="xHint">URL to the git repository. (e.g. https://github.com/Haxsen/TestRepo.wiki.git)&lt;/span>&#xd;
      &lt;/dt>&#xd;
      &lt;dd class="githubimporter_properties_descriptor_source">&#xd;
        &lt;input id="githubimporter_properties_descriptor_source_input" name="githubimporter_properties_descriptor_source" type="text" required pattern="[(http(s)?):\/\/(www\.)?a-zA-Z0-9@:%._\+~#=]{2,256}\.[a-z]{2,6}\b([-a-zA-Z0-9@:%_\+.~#?&amp;//=]*\.git)" />&#xd;
      &lt;/dd>&#xd;
      &lt;dt class="githubimporter_properties_descriptor_source_file hidden">&#xd;
        &lt;label for="githubimporter_properties_descriptor_source_file">&#xd;
          Path&#xd;
          &lt;span class="xRequired">(Required)&lt;/span>&#xd;
        &lt;/label>&#xd;
        &lt;span class="xHint">Path to the zip file / directory. Zip files must have a "zip" extension (file name ending in .zip). (e.g. /home/myuser/path/to/folder or E:\path\to\folder or /home/myuser/path/to/file.zip)&lt;/span>&#xd;
      &lt;/dt>&#xd;
      &lt;dd class="githubimporter_properties_descriptor_source_file hidden">&#xd;
        &lt;input id="githubimporter_properties_descriptor_source_file_input" name="githubimporter_properties_descriptor_source_file" type="text" pattern="^[a-zA-Z]:(\\|\/)[\\\S|*\S]?((.*\.zip)|((([^\.]*))))$"/>&#xd;
      &lt;/dd>&#xd;
      &lt;dt>&#xd;
        &lt;label for="githubimporter_properties_descriptor_parent">&#xd;
          Parent Page&#xd;
          &lt;span class="xRequired">(Required)&lt;/span>&#xd;
        &lt;/label>&#xd;
        &lt;span class="xHint">All of the imported pages will be created under this parent page.&lt;/span>&#xd;
      &lt;/dt>&#xd;
      &lt;dd>&#xd;
        &lt;input id="githubimporter_properties_descriptor_parent" name="githubimporter_properties_descriptor_parent" type="text" required/>&#xd;
      &lt;/dd>&#xd;
      &lt;dt>&#xd;
        &lt;label for="githubimporter_properties_descriptor_parent">Authentication Code&lt;/label>&#xd;
        &lt;span class="xHint">(Required for private repository) This can be oauth / token / password used for authentication.&lt;/span>&#xd;
      &lt;/dt>&#xd;
      &lt;dd>&#xd;
        &lt;input id="githubimporter_properties_descriptor_authCode" name="githubimporter_properties_descriptor_authCode" type="text" />&#xd;
      &lt;/dd>&#xd;
      &lt;dt>&#xd;
        &lt;label for="githubimporter_properties_descriptor_parent">Username&lt;/label>&#xd;
        &lt;span class="xHint">(Required for password only) The username used for authenticating with password.&lt;/span>&#xd;
      &lt;/dt>&#xd;
      &lt;dd>&#xd;
        &lt;input id="githubimporter_properties_descriptor_username" name="githubimporter_properties_descriptor_username" type="text" />&#xd;
      &lt;/dd>&#xd;
      &lt;dt>&#xd;
        &lt;label for="githubimporter_properties_descriptor_convertSyntax">Convert to Default Syntax&lt;/label>&#xd;
        &lt;span class="xHint">The syntax of the pages will be converted to the Default Page Syntax which is set in Syntaxes.&lt;/span>&#xd;
      &lt;/dt>&#xd;
      &lt;dd>&#xd;
        &lt;input id="githubimporter_properties_descriptor_convertSyntax" name="githubimporter_properties_descriptor_convertSyntax" type="checkbox" value="true" checked/>&#xd;
      &lt;/dd>&#xd;
      &lt;dt>&#xd;
        &lt;label for="githubimporter_properties_descriptor_createHierarchy">Create hierarchy of pages&lt;/label>&#xd;
        &lt;span class="xHint">Create the pages hierarchically according to their level defined in Sidebar.&lt;/span>&#xd;
      &lt;/dt>&#xd;
      &lt;dd>&#xd;
        &lt;input id="githubimporter_properties_descriptor_createHierarchy" name="githubimporter_properties_descriptor_createHierarchy" type="checkbox" value="true" checked/>&#xd;
      &lt;/dd>&#xd;
    &lt;/dl>&#xd;
    &lt;p>&#xd;
      &lt;span class="buttonwrapper">&#xd;
        &lt;input class="button" type="submit" name="Import" value="Import" />&#xd;
      &lt;/span>&#xd;
    &lt;/p>&#xd;
  &lt;/fieldset>&#xd;
&lt;/form>&#xd;
{{/html}}</content>
